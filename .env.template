# Environment Configuration Template for IRIS
# Copy this file to .env and fill in your actual values

# Deployment Configuration
FLASK_ENV=production
DEPLOY=true
FLASK_SECRET_KEY=your-super-secret-key-here-change-this

# Azure OpenAI Configuration (Primary)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-06-01

# Required API Keys (based on your dependencies)
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Optional API Keys (fallback options)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key

# Azure Container Registry (for build script)
AZURE_CONTAINER_REGISTRY=your-registry-name